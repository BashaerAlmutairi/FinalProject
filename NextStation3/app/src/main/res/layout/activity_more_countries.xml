<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backback"
    tools:context=".MoreCountries">

    <ListView
        android:id="@+id/listl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textmore"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="-222dp"
        android:background="#BF981A1A"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textmore"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/akaya_telivigala"
        android:padding="10dp"
        android:shadowColor="#000000"
        android:text="More Countries to apply to:"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textmore2"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="365dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/akaya_telivigala"
        android:padding="10dp"
        android:shadowColor="#000000"
        android:text="More specialities to apply to:"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/listl2"
        android:layout_width="233dp"
        android:layout_height="231dp"
        android:layout_alignTop="@+id/textmore2"
        android:layout_alignBottom="@+id/textmore2"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-231dp"
        android:background="#BF981A1A"
        android:padding="10dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar16"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyle"
        android:layout_width="37dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />
</RelativeLayout>